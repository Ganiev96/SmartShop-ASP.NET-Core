@model SmartShop.Application.DTOs.CreateSaleDto
@{
    ViewData["Title"] = Localizer["CreateSale"];
    var products = ViewBag.Products as List<SmartShop.Domain.Entities.Product>;
}

<h2>@Localizer["CreateSale"]</h2>

<form asp-action="Create" method="post">
    <div>
        <label>@Localizer["Product"]</label>
        <select asp-for="Items[0].ProductId">
            @foreach (var p in products ?? new List<SmartShop.Domain.Entities.Product>())
            {
                <option value="@p.Id">
                    @p.Name (@Localizer["Stock"]: @p.QuantityInStock)
                </option>
            }
        </select>
        <span asp-validation-for="Items[0].ProductId" style="color:red"></span>
    </div>

    <div>
        <label>@Localizer["Quantity"]</label>
        <input asp-for="Items[0].Quantity" type="number" />
        <span asp-validation-for="Items[0].Quantity" style="color:red"></span>
    </div>

    <button type="submit">@Localizer["Sell"]</button>
</form>

<div style="color:red">
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p>@error.ErrorMessage</p>
    }
</div>

<partial name="_ValidationScriptsPartial" />
