@model SmartShop.Application.DTOs.CreatePurchaseDto
@{
    ViewData["Title"] = Localizer["CreatePurchase"];
    var products = ViewBag.Products as List<SmartShop.Domain.Entities.Product>;
}

<h2 class="mb-3">@Localizer["CreatePurchase"]</h2>

<form asp-action="Create" method="post" class="card card-body shadow-sm border-0">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="mb-3">
        <label asp-for="SupplierName" class="form-label">@Localizer["SupplierName"]</label>
        <input asp-for="SupplierName" class="form-control" />
        <span asp-validation-for="SupplierName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Product"]</label>
        <select asp-for="Items[0].ProductId" class="form-select">
            @foreach (var p in products ?? new List<SmartShop.Domain.Entities.Product>())
            {
                <option value="@p.Id">@p.Name</option>
            }
        </select>
        <span asp-validation-for="Items[0].ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Quantity"]</label>
        <input asp-for="Items[0].Quantity" class="form-control" type="number" />
        <span asp-validation-for="Items[0].Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["UnitPrice"]</label>
        <input asp-for="Items[0].UnitPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Items[0].UnitPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
</form>

<partial name="_ValidationScriptsPartial" />
