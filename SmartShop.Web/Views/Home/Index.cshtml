@{
    ViewData["Title"] = Localizer["Home"];
}

<div class="p-5 mb-4 bg-light rounded-3 border hero-section">
    <div class="container-fluid py-2">
        <h1 class="display-5 fw-bold mb-3">@Localizer["AppName"]</h1>
        <p class="col-lg-8 fs-5 text-secondary mb-4">
            @Localizer["HomeSubtitle"]
        </p>
        @if (!User.Identity?.IsAuthenticated ?? true)
        {
            <a class="btn btn-primary btn-lg me-2" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a>
            <a class="btn btn-outline-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a>
        }
        else
        {
            <a class="btn btn-primary btn-lg" asp-controller="Dashboard" asp-action="Index">@Localizer["GoToDashboard"]</a>
        }
    </div>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">@Localizer["Products"]</h5>
                <p class="card-text text-secondary">@Localizer["ProductsFeatureDescription"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">@Localizer["Purchases"]</h5>
                <p class="card-text text-secondary">@Localizer["PurchasesFeatureDescription"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">@Localizer["Sales"]</h5>
                <p class="card-text text-secondary">@Localizer["SalesFeatureDescription"]</p>
            </div>
        </div>
    </div>
</div>
