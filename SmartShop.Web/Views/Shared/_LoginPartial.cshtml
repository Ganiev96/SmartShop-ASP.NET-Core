@using Microsoft.AspNetCore.Identity
@using SmartShop.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav align-items-lg-center gap-lg-2">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="@Localizer["Manage"]">
                @User.Identity?.Name
            </a>
        </li>
        <li class="nav-item">
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-light">@Localizer["Logout"]</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-sm btn-outline-light" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-sm btn-light" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a>
        </li>
    }
</ul>
