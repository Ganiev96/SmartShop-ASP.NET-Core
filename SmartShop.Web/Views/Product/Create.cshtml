@model SmartShop.Application.DTOs.CreateProductDto
@{
    ViewData["Title"] = Localizer["CreateProduct"];
}

<h2>@Localizer["CreateProduct"]</h2>

<form asp-action="Create" method="post">
    <div>
        <label>@Localizer["Name"]</label>
        <input asp-for="Name" />
    </div>

    <div>
        <label>@Localizer["SKU"]</label>
        <input asp-for="SKU" />
    </div>

    <div>
        <label>@Localizer["PurchasePrice"]</label>
        <input asp-for="PurchasePrice" />
    </div>

    <div>
        <label>@Localizer["SalePrice"]</label>
        <input asp-for="SalePrice" />
    </div>

    <div>
        <label>@Localizer["MinimumStock"]</label>
        <input asp-for="MinimumStockLevel" />
    </div>

    <button type="submit">@Localizer["Save"]</button>
</form>
