@model SmartShop.Application.DTOs.PagedResult<SmartShop.Domain.Entities.Product>
@inject IStringLocalizer<SmartShop.Web.SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Products"];
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@Localizer["Products"]</h2>
    <a asp-action="Create" class="btn btn-primary">@Localizer["CreateNew"]</a>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["SKU"]</th>
                    <th>@Localizer["Stock"]</th>
                    <th>@Localizer["SalePrice"]</th>
                    <th class="text-end">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.SKU</td>
                        <td>
                            <span class="badge @(item.QuantityInStock <= item.MinimumStockLevel ? "bg-warning text-dark" : "bg-success")">
                                @item.QuantityInStock
                            </span>
                        </td>
                        <td>@item.SalePrice.ToString("N0")</td>
                        <td class="text-end">
                            @if (User.IsInRole("Owner"))
                            {
                                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('@Localizer["DeleteConfirm"]');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        @Localizer["Delete"]
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-3" aria-label="Product pages">
        <ul class="pagination">
            @for (int p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.Page ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                </li>
            }
        </ul>
    </nav>
}
